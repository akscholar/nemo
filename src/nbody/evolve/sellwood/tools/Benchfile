DIR = src/nbody/evolve/sellwood/tools
BIN = rungalaxy
NEED = $(BIN) mkplummer galaxy tsf
BENCH = bench1

help:
	@echo $(DIR)

need:
	@echo $(NEED)

clean:
	@echo Cleaning $(DIR)
	@rm -fr run1.in run1

NBODY = 1000
TSTOP = 10

all: $(BENCH)


bench1.in:
	mkplummer bench1.in $(NBODY) seed=$(NBODY)
	

# old sparc 20 steps (tstop=1) took 4.7"
# new i5-11
 
bench1:	 bench1.in
	 rm -rf bench1.run
	 nemobench galaxy rungalaxy in=bench1.in outdir=bench1.run tstop=$(TSTOP)
	 rm -rf bench1.in
